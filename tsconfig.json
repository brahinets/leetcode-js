{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["common/**/*", "solutions/**/*"],
  "exclude": ["node_modules", "dist"]
}
